<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="GUTMT - 数据窗格"
             x:Class="QiuUTMT.DataTreePage">
    <Grid RowDefinitions="Auto, *, Auto"
          >
        <!-- 标题和导航按钮 -->
        <StackLayout Grid.Row="0" Orientation="Horizontal" Padding="10">
            <Button 
                x:Name="ButtonBack"
                Text="上一级" 
                Clicked="OnBackButtonClicked"  />
            <Label x:Name="LabelObjectName"
                   VerticalOptions="Center" 
                   FontSize="16" FontAttributes="Bold"
                   Margin="10,0,0,0"/>
        </StackLayout>
        
        <!-- 属性列表 -->
        <ListView Grid.Row="1" ItemsSource="{Binding Properties}" 
                  ItemSelected="OnPropertySelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Grid.Row="0" Text="{Binding Name}" 
                                   FontAttributes="Bold" 
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="0" Grid.Row="1" Text="{Binding Value}" 
                                   VerticalOptions="Center"/>
                            <Image Grid.Column="1" Grid.Row="0" Source="{Binding IsExpandable, Converter={StaticResource ExpandableIconConverter}}"
                                   WidthRequest="20" HeightRequest="20"
                                   HorizontalOptions="End" VerticalOptions="Center"
                                   IsVisible="{Binding IsExpandable}"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <!-- 底部状态栏 -->
        <StackLayout Grid.Row="2" Orientation="Horizontal" 
                     BackgroundColor="LightGray" Padding="10">
            <Label x:Name="LabelStatus" />
        </StackLayout>
    </Grid>
</ContentPage>