<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QiuUTMT.MultiSelectDialogPage"
             Title="请选择">
    <Grid RowDefinitions="Auto,*">
        <Button Grid.Row="0" Text="选择完毕后按下系统返回键或者这个按钮返回" Clicked="OnConfirmClicked" />
        <CollectionView Grid.Row="1"  x:Name="ItemsCollectionView"
                        SelectionMode="None"
                        SelectedItems="{Binding SelectedItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" Grid.Row="0"
                                  HorizontalOptions="End" VerticalOptions="Center"
                                  IsChecked="{Binding Checked}" />
                        <Label Grid.Column="1" Grid.Row="0" Text="{Binding Name}"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>